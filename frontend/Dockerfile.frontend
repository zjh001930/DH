# -------------------- frontend/Dockerfile.frontend --------------------

# 使用 Node.js 镜像
FROM node:20-alpine

# 设置工作目录
WORKDIR /app

# 复制 package.json 和 package-lock.json
COPY frontend/package.json frontend/package-lock.json ./

# 安装依赖
RUN npm install

# 复制前端源代码
COPY frontend/ .

# 暴露端口
EXPOSE 3000

# 启动开发服务器
CMD ["npm", "start"]

